<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.BilletDetailFragment">

    <TextView
        android:id="@+id/billeDescriptionTV"
        android:layout_width="366dp"
        android:layout_height="211dp"
        android:layout_marginTop="32dp"
        android:text="Billet Description"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billetImage" />

    <TextView
        android:id="@+id/billetTittleTv"
        android:layout_width="330dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Billet Tittle"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Book Now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/billeDescriptionTV" />

    <ImageView
        android:id="@+id/billetImage"
        android:layout_width="406dp"
        android:layout_height="228dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/house"
        app:layout_constraintEnd_toEndOf="@+id/billetTittleTv"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/billetTittleTv"
        app:layout_constraintTop_toBottomOf="@+id/billetTittleTv" />

</androidx.constraintlayout.widget.ConstraintLayout>
