<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.commsHub.CommsHubFragment">

    <Button
        android:id="@+id/newsUpdatesButton"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/baseline_newspaper_24"
        android:text="News Updates and Maps"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/messagesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFireComms" />

    <Button
        android:id="@+id/messagesButton"
        android:layout_width="165dp"
        android:layout_height="140dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/baseline_message_24"
        android:text="Billet Messages"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/newsUpdatesButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewFireComms"
        android:layout_width="268dp"
        android:layout_height="260dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bigfire" />

</androidx.constraintlayout.widget.ConstraintLayout>